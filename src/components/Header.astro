---
import { Icon } from 'astro-icon';

import navLinks from '../data/navLinks';
import Link from './Link.astro';
---

<div class='sticky top-0 z-50'>
	<header
		class='pointer-events-none relative z-50 flex flex-col bg-white dark:bg-zinc-900'
	>
		<div class='pt-10 pb-6'>
			<div class='sm:px-8'>
				<div class='mx-auto max-w-5xl lg:px-8'>
					<div class='relative px-4 sm:px-8 lg:px-12'>
						<div class='relative flex justify-between'>
							<div class='flex'>
								<div class='pointer-events-auto md:hidden'>
									<button
										class='group flex items-center px-4 py-2 text-sm font-medium text-zinc-800 dark:text-zinc-200'
										type='button'
										aria-expanded='true'
										id='mobileMenuBtn'
										>Menu<svg
											viewBox='0 0 8 6'
											aria-hidden='true'
											class='ml-3 h-auto w-2 stroke-zinc-500 group-hover:stroke-zinc-700 dark:group-hover:stroke-zinc-400'
											><path
												d='M1.75 1.75 4 4.25l2.25-2.5'
												fill='none'
												stroke-width='1.5'
												stroke-linecap='round'
												stroke-linejoin='round'></path></svg
										></button
									><div>
										<div
											class='hidden fixed inset-0 z-50 bg-zinc-800/40 backdrop-blur-sm dark:bg-black/80 opacity-100'
											aria-hidden='true'
											id='mobileMenuBlur'
										>
										</div><div
											class='hidden fixed inset-x-4 top-8 z-50 origin-top rounded-3xl bg-white p-8 ring-1 ring-zinc-900/5 dark:bg-zinc-900 dark:ring-zinc-800 opacity-100 scale-100'
											id='mobileMenu'
											tabindex='-1'
										>
											<div
												class='flex flex-row-reverse items-center justify-between'
											>
												<button
													aria-label='Close menu'
													class='-m-1 p-1'
													type='button'
													tabindex='0'
													id='mobileMenuClose'
													><svg
														viewBox='0 0 24 24'
														aria-hidden='true'
														class='h-6 w-6 text-zinc-500 dark:text-zinc-400'
														><path
															d='m17.25 6.75-10.5 10.5M6.75 6.75l10.5 10.5'
															fill='none'
															stroke='currentColor'
															stroke-width='1.5'
															stroke-linecap='round'
															stroke-linejoin='round'></path></svg
													></button
												><h2
													class='text-sm font-medium text-zinc-600 dark:text-zinc-400'
												>
													Navigation
												</h2>
											</div><nav class='mt-6'>
												<ul
													class='-my-2 divide-y divide-zinc-100 text-base text-zinc-800 dark:divide-zinc-100/5 dark:text-zinc-300'
												>
													{
														navLinks.map((item) => (
															<li>
																<Link
																	href={item.path}
																	text={item.name}
																	classes='block py-2'
																	data-navLink
																/>
															</li>
														))
													}
												</ul>
											</nav>
										</div>
									</div>
								</div>
								<nav class='pointer-events-auto hidden md:block'>
									<ul class='flex text-sm font-medium text-zinc-500'>
										{
											navLinks.map((item) => (
												<li>
													<Link
														href={item.path}
														text={item.name}
														classes='relative block px-3 py-2 transition hover:text-teal-500 dark:hover:text-teal-400'
														data-navLink
													/>
												</li>
											))
										}
									</ul>
								</nav>
							</div>
							<div class='flex justify-end'>
								<div class='pointer-events-auto'>
									<button
										type='button'
										id='toggleDark'
										aria-label='Toggle dark mode'
										class='group rounded-full px-3 py-2'
									>
										<Icon
											name='ph:moon-stars'
											class='hidden h-6 w-6 text-zinc-800 dark:text-zinc-200 transition dark:block hover:text-teal-500'
										/>
										<Icon
											name='ph:sun'
											class='dark:hidden h-6 w-6 text-zinc-800 dark:text-zinc-200 transition hover:text-teal-500'
										/>
									</button>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</header>
</div>

<script>
	import '../js/nav.js';
</script>
