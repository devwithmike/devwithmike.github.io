---
import footerLinks from '@/data/footerLinks';
import Link from './Link.astro';
---

<footer class='mt-32'>
	<div class='sm:px-8'>
		<div class='max-w-5xl mx-auto lg:px-8'>
			<div class='pt-10 pb-16 border-t border-zinc-100 dark:border-zinc-700/40'>
				<div class='relative px-4 sm:px-8 lg:px-12'>
					<div class='max-w-2xl mx-auto lg:max-w-5xl'>
						<div
							class='flex flex-col items-center justify-between gap-6 sm:flex-row'
						>
							<div
								class='flex gap-6 text-sm font-medium text-zinc-800 dark:text-zinc-200'
							>
								{
									footerLinks.map((item) => (
										<Link href={item.path} text=" " icon={{ name: item.icon, side: "left" }} aria-label={ item.ariaLabel } classes="transition" />
									))
								}
							</div><p class='text-sm text-zinc-800 dark:text-zinc-200'>
								Â© <!-- --><span id="date"></span><!-- --> Mike Meyer. All rights reserved.
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</footer>

<script>
	document.querySelector("#date").textContent = new Date().getFullYear().toString();
</script>
